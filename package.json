{
    "devDependencies": {
        "@symfony/webpack-encore": "^0.31.0",
        "autoprefixer": "^9.8.6",
        "core-js": "^3.0.0",
        "cross-env": "^7.0.2",
        "fibers": "^5.0.0",
        "postcss": "^7.0.35",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "regenerator-runtime": "^0.13.2",
        "sass": "^1.28.0",
        "sass-loader": "^9.0.3",
        "stylelint": "^13.7.2",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.18.0",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1",
        "webpack-notifier": "^1.6.0"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev-server": "encore dev-server --config ./source/View/Assets/webpack.config.js",
        "dev": "encore dev --config ./source/View/Assets/webpack.config.js",
        "watch": "encore dev --watch --config ./source/View/Assets/webpack.config.js",
        "build": "cross-env NODE_ENV=production encore production --progress --config ./source/View/Assets/webpack.config.js"
    },
    "stylelint": {
        "plugins": [
            "stylelint-scss"
        ],
        "extends": [
            "stylelint-config-idiomatic-order",
            "stylelint-config-standard",
            "stylelint-config-prettier"
        ],
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "apply",
                        "responsive",
                        "screen",
                        "tailwind",
                        "variants"
                    ]
                }
            ],
            "comment-empty-line-before": null
        }
    }
}
