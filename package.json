{
  "devDependencies": {
    "@a2lix/symfony-collection": "^0.4.0",
    "@alpine-collective/toolkit-scroll": "^1.0.0",
    "@alpinejs/trap": "^3.5.1",
    "@ryangjchandler/alpine-tooltip": "^0.4.0",
    "@symfony/webpack-encore": "^1.6.1",
    "alpinejs": "^3.5.1",
    "autoprefixer": "^10.4.0",
    "axios": "^0.24.0",
    "core-js": "^3.19.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.7.0",
    "cypress-wait-until": "^1.7.2",
    "dropzone": "5.9.3",
    "fibers": "^5.0.0",
    "gulp-google-webfonts": "^4.1.0",
    "list.js": "^2.3.1",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "postcss-scss": "^4.0.2",
    "postcss-svg": "^3.0.0",
    "prettier": "^2.4.1",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "stylelint": "^14.0.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-scss": "^4.0.0",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "2.2.19",
    "tippy.js": "^6.3.7",
    "webpack-notifier": "^1.14.1"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev-server": "cross-env NODE_ENV=development encore dev-server",
    "dev": "encore dev",
    "fonts": "rimraf source/View/Assets/Fonts/* && google-webfonts < fonts.list --font-display-type fallback --css-filename _googlewebfonts.scss --css-dir ./ --out-base-dir source/View/Assets/Styles --fonts-dir ../Fonts",
    "watch": "encore dev --watch",
    "build": "cross-env NODE_ENV=production encore production --progress"
  },
  "stylelint": {
    "overrides": [
      {
        "files": [
          "**/*.scss"
        ],
        "customSyntax": "postcss-scss"
      }
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "extends": [
      "stylelint-config-idiomatic-order",
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "responsive",
            "screen",
            "tailwind",
            "variants",
            "layer"
          ]
        }
      ],
      "comment-empty-line-before": null,
      "selector-class-pattern": null
    }
  }
}
