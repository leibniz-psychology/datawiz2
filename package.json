{
    "devDependencies": {
        "@symfony/webpack-encore": "^0.33.0",
        "autoprefixer": "^10.1.0",
        "core-js": "^3.8.2",
        "cross-env": "^7.0.3",
        "fibers": "^5.0.0",
        "postcss": "^8.2.2",
        "postcss-loader": "^4.1.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "regenerator-runtime": "^0.13.7",
        "sass": "^1.32.0",
        "sass-loader": "^10.1.0",
        "stylelint": "^13.8.0",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.18.0",
        "tailwindcss": "^2.0.2",
        "webpack-notifier": "^1.12.0"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev-server": "encore dev-server --config ./source/View/Assets/webpack.config.js --https --pfx=$HOME/.symfony/certs/default.p12",
        "dev": "encore dev --config ./source/View/Assets/webpack.config.js",
        "watch": "encore dev --watch --config ./source/View/Assets/webpack.config.js",
        "build": "cross-env NODE_ENV=production encore production --progress --config ./source/View/Assets/webpack.config.js"
    },
    "stylelint": {
        "plugins": [
            "stylelint-scss"
        ],
        "extends": [
            "stylelint-config-idiomatic-order",
            "stylelint-config-standard",
            "stylelint-config-prettier"
        ],
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "apply",
                        "responsive",
                        "screen",
                        "tailwind",
                        "variants"
                    ]
                }
            ],
            "comment-empty-line-before": null
        }
    }
}
