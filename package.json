{
  "devDependencies": {
    "@a2lix/symfony-collection": "^0.4.0",
    "@ryangjchandler/spruce": "^2.7.0",
    "@symfony/webpack-encore": "^1.1.2",
    "alpinejs": "^2.8.2",
    "autoprefixer": "^10.2.5",
    "core-js": "^3.11.1",
    "cross-env": "^7.0.3",
    "fibers": "^5.0.0",
    "postcss": "^8.2.13",
    "postcss-loader": "^5.2.0",
    "postcss-svg": "^3.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.32.12",
    "sass-loader": "^11.0.1",
    "stylelint": "^13.13.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "tailwindcss": "^2.1.2",
    "webpack-notifier": "^1.13.0"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev-server": "cross-env NODE_ENV=development encore dev-server --config ./.tools/config/webpack.config.js",
    "dev": "encore dev --config ./.tools/config/webpack.config.js",
    "watch": "encore dev --watch --config ./.tools/config/webpack.config.js",
    "build": "cross-env NODE_ENV=production encore production --progress --config ./.tools/config/webpack.config.js"
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": [
      "stylelint-config-idiomatic-order",
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "responsive",
            "screen",
            "tailwind",
            "variants",
            "layer"
          ]
        }
      ],
      "comment-empty-line-before": null
    }
  },
  "prettier": {
    "plugins": [
      "./node_modules/prettier-plugin-twig-melody"
    ],
    "overrides": [
      {
        "files": [
          "*.html.twig"
        ],
        "options": {
          "tabWidth": 4
        }
      }
    ],
    "twigSingleQuote": false
  },
  "dependencies": {
    "dropzone": "^5.9.2"
  }
}
