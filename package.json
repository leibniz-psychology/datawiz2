{
    "devDependencies": {
        "@symfony/webpack-encore": "^1.1.2",
        "autoprefixer": "^10.2.5",
        "core-js": "^3.10.0",
        "cross-env": "^7.0.3",
        "fibers": "^5.0.0",
        "postcss": "^8.2.9",
        "postcss-loader": "^5.2.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "regenerator-runtime": "^0.13.7",
        "sass": "^1.32.8",
        "sass-loader": "^11.0.1",
        "stylelint": "^13.12.0",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.19.0",
        "tailwindcss": "^2.1.1",
        "webpack-notifier": "^1.13.0"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev-server": "encore dev-server --config ./.tools/config/webpack.config.js",
        "dev": "encore dev --config ./.tools/config/webpack.config.js",
        "watch": "encore dev --watch --config ./.tools/config/webpack.config.js",
        "build": "cross-env NODE_ENV=production encore production --progress --config ./.tools/config/webpack.config.js"
    },
    "stylelint": {
        "plugins": [
            "stylelint-scss"
        ],
        "extends": [
            "stylelint-config-idiomatic-order",
            "stylelint-config-standard",
            "stylelint-config-prettier"
        ],
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "apply",
                        "responsive",
                        "screen",
                        "tailwind",
                        "variants"
                    ]
                }
            ],
            "comment-empty-line-before": null
        }
    },
    "dependencies": {
        "@a2lix/symfony-collection": "^0.4.0"
    }
}
