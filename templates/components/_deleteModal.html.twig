<div class="Modal-Overlay" x-bind="overlay" x-cloak>
    <div class="Modal-Dialog" @click.outside="hide()">

        <div class="Modal-Header">
            <div class="Modal-Title">
                {{ title|trans }}
            </div>
            <button class="Modal-Button_close" @click="hide()" type="button">
                {{ include('components/icons/close.svg') }}
            </button>
        </div>

        <div class="Modal-Body">
            {{ description |trans({'#materialName#':"<span class='font-semibold'>" ~ name ~ "</span>"})|raw }}
        </div>

        <div class="Modal-Footer">
            <button class="Button_primary_danger Button_standalone"
                    type="button"
                    @click="window.location.href='{{ url }}'"
            >
                {{ confirm|trans }}
            </button>
            <button class="ml-2 Button_tertiary_act Button_standalone"
                    type="button" x-ref="focusFirst"
                    @click="hide()">
                {{ "generic.cancel"|trans }}
            </button>
        </div>
    </div>
</div>