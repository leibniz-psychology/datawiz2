<div class="Modal-Overlay hidden" {{ stimulus_target('modal', 'modalOverlay') }} {{ stimulus_action('modal', 'closeModal', 'click') }}>
    <div class="Modal-Dialog">

        <div class="Modal-Header">
            <div class="Modal-Title">
                {{ title|trans }}
            </div>
            <button class="Modal-Button_close" type="button" {{ stimulus_action('modal', 'closeModal') }}>
                {{ include('components/icons/close.svg') }}
            </button>
        </div>

        <div class="Modal-Body">
            {{ description |trans({'#materialName#':"<span class='font-semibold'>" ~ name ~ "</span>"})|raw }}
        </div>

        <div class="Modal-Footer">
            <button class="Button_primary_danger Button_standalone"
                    type="button"
                    {{ stimulus_action('modal', 'submit') }}
            >
                {{ confirm|trans }}
            </button>
            <button class="ml-2 Button_tertiary_act Button_standalone" type="button"
                    {{ stimulus_action('modal', 'closeModal') }}>
                {{ "generic.cancel"|trans }}
            </button>
        </div>
    </div>
</div>

